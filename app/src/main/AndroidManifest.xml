<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.bit.osf.flashcard">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".debug.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoxListActivity"
            android:label="@string/title_activity_box_list" />
        <activity
            android:name=".CardListActivity"
            android:label="@string/title_activity_card_list" />
        <activity
            android:name=".CardViewActivity"
            android:label="@string/title_activity_card_view" />

        <activity android:name=".CardEditActivity"></activity>
        <activity android:name=".BoxListModeActivity"></activity>
        <!--<activity-->
            <!--android:name=".CardEditActivity"-->
            <!--android:label="@string/title_activity_card_edit" />-->
    </application>

</manifest>
